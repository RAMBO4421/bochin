{{#>
layouts/auth
        title="Login"
        pagename="page_login"
}}

    {{#*inline "head-block"}}
        <link rel="stylesheet" media="screen, print" href="css/content/page_login/page_login.css?v={{random}}">
    {{/inline}}

    {{#*inline "content-block"}}
        <div class="blankpage-form-field">
            <div class="page-logo m-0 w-100 align-items-center justify-content-center rounded border-bottom-left-radius-0 border-bottom-right-radius-0 px-4">
                <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
                    <img src="img/{{logo}}" alt="{{app-name}}" aria-roledescription="logo">
                    <span class="page-logo-text mr-1">{{app-name}}</span>
                </a>
            </div>

            <div class="card p-4 border-top-left-radius-0 border-top-right-radius-0">
                <form>
                    <div class="form-group">
                        <label class="form-label" for="username">Nom d'utilisateur</label>
                        <input type="text" id="username" class="form-control" placeholder="nom d'utilisateur">
                        {{!-- <span class="help-block">
                            Votre identifiant unique
                        </span> --}}
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="password">Mot de passe</label>
                        <input type="password" id="password" class="form-control" placeholder="mot de passe"
                               autocomplete="on">
                        {{!-- <span class="help-block">
                            Votre mot de passe
                        </span> --}}
                    </div>

                    <button id="login" type="button" class="btn btn-default float-right">Connexion</button>
                </form>

                <div class="d-flex align-items-center flex-1 text-muted"
                     style=" margin-top: 15px; justify-content: center; ">
                    <a href="release_notes.html" target="_blank" style="    text-decoration: none !important;"><span
                            class="hidden-md-down fw-700">Build v {{{version}}} </span></a>
                    <span class="hidden-md-down fw-700">&nbsp; {{{copyright}}}</span>
                </div>
            </div>
        </div>

        <video poster="img/backgrounds/clouds.png" id="bgvid" playsinline autoplay muted loop>
            <source src="media/video/cc.webm" type="video/webm">
            <source src="media/video/cc.mp4" type="video/mp4">
        </video>
    {{/inline}}

    {{#*inline "scripts-block"}}
        <script src="js/content/page_login/page_login.js?v={{random}}"></script>

    {{/inline}}

{{/layouts/auth}}
